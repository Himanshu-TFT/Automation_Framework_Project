<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">

    <listeners>
        <listener class-name="project.Utilities.SuitListeners">
        </listener>
    </listeners>

    <test name="ChromeTest" thread-count="3">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="TestCase.SampleTest">
                <methods>
                    <include name="sampleLogin"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="FirefoxTest" thread-count="3">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="TestCase.SampleTest">
                <methods>
                    <include name="sampleLogin"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="EdgeTest" thread-count="3">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="TestCase.SampleTest">
                <methods>
                    <include name="sampleLogin"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>